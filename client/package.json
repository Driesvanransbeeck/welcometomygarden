{
  "name": "welcome-to-my-garden",
  "description": "a platform allowing citizens to put their garden freely at disposal as a rudimentary campsite to travelers.",
  "version": "1.0.0",
  "scripts": {
    "dev": "run-p watch:routify watch:rollup",
    "prebuild": "routify --single-build",
    "build": "rollup -c",
    "watch:rollup": "rollup -c -w",
    "watch:routify": "routify",
    "start": "sirv public --single"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,svelte,ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@sveltech/routify": "^1.7.11",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "@mapbox/mapbox-gl-geocoder": "^4.5.1",
    "mapbox-gl": "^1.10.1",
    "sirv-cli": "^0.4.4"
  }
}
